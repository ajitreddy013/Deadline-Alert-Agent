# Backend configuration
DATABASE_URL=sqlite:///./data/app.db
TZ=local

# Notifications
DESKTOP_NOTIFICATIONS_ENABLED=true

# OneSignal (mobile push)
ONESIGNAL_ENABLED=false
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=

# Twilio WhatsApp (outbound reminders)
TWILIO_WHATSAPP_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# WhatsApp Web scraping
WHATSAPP_HEADLESS=false
WHATSAPP_USER_DATA_DIR=~/.deadline_reminder/whatsapp

# Defaults
DEFAULT_REMINDER_OFFSETS=-86400,0

# LLM Configuration (Optional)
# Groq API - Get free API key at: https://console.groq.com
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama - Local LLM (no API key needed)
OLLAMA_MODEL=llama3.2:1b

# LLM Provider Priority
# Options: auto (tries Groq → Ollama → Regex), groq, ollama, regex
LLM_PROVIDER=auto

