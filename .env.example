# Backend configuration
DATABASE_URL=sqlite:///./data/app.db
TZ=local

# Notifications
DESKTOP_NOTIFICATIONS_ENABLED=true

# OneSignal (mobile push)
ONESIGNAL_ENABLED=false
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=

# Twilio WhatsApp (outbound reminders)
TWILIO_WHATSAPP_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# WhatsApp Web scraping
WHATSAPP_HEADLESS=false
WHATSAPP_USER_DATA_DIR=~/.deadline_reminder/whatsapp

# Defaults
DEFAULT_REMINDER_OFFSETS=-86400,0
